<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TicTacToeActivity" android:layout_gravity="center" android:id="@+id/TableLayout"
        android:gravity="center" android:background="#000">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center_horizontal">
        <TextView
                android:text="איקס עיגול"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textSize="30sp" android:gravity="center" android:textColor="@android:color/white"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:id="@+id/imgButton" android:layout_weight="1" android:src="@drawable/back_table"
                android:scaleType="fitCenter" android:onClick="imageButtonTapped" android:background="#000"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:id="@+id/imgButton2" android:layout_weight="1" android:src="@drawable/back_table"
                android:scaleType="fitCenter" android:onClick="imageButtonTapped" android:background="#000"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:id="@+id/imgButton3" android:layout_weight="1" android:src="@drawable/back_table"
                android:scaleType="fitCenter" android:onClick="imageButtonTapped" android:background="#000"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:id="@+id/imgButton4" android:layout_weight="1" android:src="@drawable/back_table"
                android:scaleType="fitCenter" android:onClick="imageButtonTapped" android:background="#000"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:id="@+id/imgButton5" android:layout_weight="1" android:src="@drawable/back_table"
                android:scaleType="fitCenter" android:onClick="imageButtonTapped" android:background="#000"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:id="@+id/imgButton6" android:layout_weight="1" android:src="@drawable/back_table"
                android:scaleType="fitCenter" android:onClick="imageButtonTapped" android:background="#000"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:id="@+id/imgButton7" android:layout_weight="1" android:src="@drawable/back_table"
                android:scaleType="fitCenter" android:onClick="imageButtonTapped" android:background="#000"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:id="@+id/imgButton8" android:layout_weight="1" android:src="@drawable/back_table"
                android:scaleType="fitCenter" android:onClick="imageButtonTapped" android:background="#000"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:id="@+id/imgButton9" android:layout_weight="1" android:src="@drawable/back_table"
                android:scaleType="fitCenter" android:onClick="imageButtonTapped" android:background="#000"/>
    </TableRow>
</TableLayout>